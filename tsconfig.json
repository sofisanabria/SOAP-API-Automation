{
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2021",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "utils"
  ],
  "exclude": [
    "node_modules"
  ],
}